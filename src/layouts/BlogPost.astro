---
import type { CollectionEntry } from 'astro:content';
import BaseHead from 'components/BaseHead.astro';
import Header from 'components/Header.astro';
import Footer from 'components/Footer.astro';
import FormattedDate from 'components/FormattedDate.astro';

type Props = CollectionEntry<'posts'>['data'];

const { title, description, pubDate, tags } = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
        <style>
            article {
                display: flex;
                flex-direction: column;
                align-items: center;
            }
            .title {
                width: 880px;
                line-height: 1;
                padding-bottom: 128px;
            }
            .title h1 {
                text-align: center;
                margin-bottom: 52px;
                text-wrap: pretty;
            }
            .metadata {
                color: var(--grey-dark);
                font-size: var(--text--1);
                display: flex;
                align-items: center;
                gap: 24px;
                margin: 0 2rem;
                white-space: nowrap;
            }
            .date {
                white-space: nowrap;
            }
            .horizontal-rule {
                width: 100%;
                height: 1px;
                background-color: var(--grey);
            }
            .tags {
                display: flex;
                gap: 12px;
            }
            .content {
                width: 720px;
            }
        </style>
    </head>

    <body>
        <Header />
        <main>
            <article>
                <div class="title">
                    <h1>{title}</h1>
                    <!-- TODO: chuck into a component -->
                    <div class="metadata">
                        <div class="date">
                            <FormattedDate date={pubDate} />
                        </div>
                        <div class="horizontal-rule"></div>
                        {
                            tags && (
                                <div class="tags">
                                    {tags.map(tag => {
                                        const formattedTag = tag.toLowerCase();
                                        return (
                                            <a href={`/tags/${formattedTag}`}>#{formattedTag}</a>
                                        );
                                    })}
                                </div>
                            )
                        }
                    </div>
                </div>
                <div class="content">
                    <slot />
                </div>
            </article>
            <Footer />
        </main>
    </body>
</html>
