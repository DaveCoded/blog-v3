---
import type { CollectionEntry } from 'astro:content';
import BaseHead from 'components/BaseHead.astro';
import Header from 'components/Header.astro';
import Footer from 'components/Footer.astro';
import Metadata from 'components/Metadata.astro';

type Props = CollectionEntry<'post'>['data'];

const { title, description, pubDate, tags } = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
        <style>
            article {
                display: flex;
                flex-direction: column;
                align-items: center;
                counter-reset: sidenote-counter;
            }
            .title {
                --gap: clamp(var(--space-xs), 5vw, var(--space-l));
                width: min(880px, 100% - var(--gap) * 2);
                line-height: 1;
                padding-bottom: var(--space-2xl-3xl);
            }
            .title h1 {
                text-align: center;
            }

            ::marker {
                color: hsl(var(--accent));
                font-size: 83%;
                font-weight: 400;
            }
            ul li::marker {
                content: '❥';
            }
            ul {
                padding-left: var(--space-xs);
            }
            ul > li {
                padding-left: var(--space-2xs);
            }
        </style>
    </head>

    <body>
        <Header />
        <main>
            <article>
                <div class="title">
                    <h1>{title}</h1>
                    <Metadata pubDate={pubDate} tags={tags} />
                </div>
                <div class="content">
                    <slot />
                </div>
            </article>
            <Footer />
        </main>
    </body>
</html>
